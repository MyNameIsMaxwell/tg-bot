# Telegram Summary Bot - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Telegram API Credentials
# =============================================================================

# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_api_hash_here

# Create a bot via @BotFather and get the token
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# =============================================================================
# REQUIRED - AI API
# =============================================================================

# DeepSeek API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# =============================================================================
# OPTIONAL - Database
# =============================================================================

# SQLite (default) or PostgreSQL connection string
# For SQLite: sqlite+aiosqlite:///./data/app.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# =============================================================================
# OPTIONAL - Application Settings
# =============================================================================

# Base URL where the webapp is hosted (used for CORS)
WEBAPP_BASE_URL=http://localhost:8000

# How often the scheduler checks for due templates (in seconds)
SCHEDULER_INTERVAL_SECONDS=300

# How long Telegram initData is valid (in seconds, default 24 hours)
INITDATA_TTL_SECONDS=86400

# =============================================================================
# OPTIONAL - Advanced
# =============================================================================

# Telethon StringSession for user-mode message fetching
# Generate with: python stringSession.py
# Required only if you want to fetch from channels where bot can't read
TELEGRAM_SESSION=




